{
  "chain": "stacks",
  "uuid": "verified-dex-pool-events-001",
  "name": "Verified DEX/AMM - Pool Events Monitor",
  "version": 1,
  "networks": {
    "testnet": {
      "if_this": {
        "scope": "print_event",
        "contract_identifier": "ST12KRGRZ2N2Q5B8HKXHETGRD0JVF282TAAXNM1ZV.pool-template",
        "contains": "type"
      },
      "then_that": {
        "http_post": {
          "url": "http://localhost:3001/chainhooks/pool-events",
          "authorization_header": "Bearer YOUR_SECRET_TOKEN"
        }
      },
      "start_block": 0
    },
    "mainnet": {
      "if_this": {
        "scope": "print_event",
        "contract_identifier": "YOUR_MAINNET_ADDRESS.pool-template",
        "contains": "type"
      },
      "then_that": {
        "http_post": {
          "url": "https://your-production-url.com/chainhooks/pool-events",
          "authorization_header": "Bearer YOUR_SECRET_TOKEN"
        }
      },
      "start_block": 0
    }
  }
}
